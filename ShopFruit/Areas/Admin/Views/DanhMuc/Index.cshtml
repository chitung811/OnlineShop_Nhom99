@model IEnumerable<Model.EF.DanhMuc>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
@section DanhMuc{
    <script src="~/Content/Admin/js/danhmuc.js"></script>
}
<link href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">QUẢN LÝ DANH MỤC</h1>
    <p class="mb-4"> Bảng chứa thông tin các danh mục.</p>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h5 class="m-0 font-weight-bold text-dark">Danh Sách Danh Mục</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">
                    Thêm Danh Mục</button><br /><br />
                    <table class="table table-striped table-condensed" id="employeeTable">
                        <thead>
                            <tr>
                                <th>
                                    Tên Danh Mục
                                </th>
                                <th>
                                    MetaKeyword
                                </th>
                                <th>
                                    Trạng Thái
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody class="tbody">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenDanhMuc)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.MetaKeyword)
                                    </td>
                                    <td>
                                        
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        <a class="btn btn-success btn-sm" onclick=getbyID(@item.DanhMucID);><i class="fa fa-pen-fancy fa-lg"></i></a>
                                        <a class="btn btn-warning btn-sm" onclick=Delete(@item.DanhMucID);><i class="fa fa-trash fa-lg"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
            </div>
        </div>
    </div>
</div>
@{Html.RenderAction("FormDanhMuc", "DanhMuc");}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/Admin/js/jquery.dataTables.min.js"></script>
    <script>
        function activatejQueryTable() {
            $("#employeeTable").DataTable();
        }

        $(function () {
            activatejQueryTable();
        });
    </script>
}


@model List<Model.ViewModel.BlogViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- End Header -->
<section id="content">
    <div class="container">
        <div class="shop-banner banner-adv line-scale zoom-image">
            <img src="~/Content/Client/images/blog/banner-blog-list.jpg" alt="" /></a>
        </div>
        <!-- ENd Banner -->
        <div class="content-shop">
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <aside class="sidebar-left sidebar-blog">
                        <!-- End Widget -->
                        <div class="widget widget-category">
                            <h2 class="title18 title-widget font-bold">Product Categories</h2>
                            <ul class="list-none wg-list-cat">
                                @{ Html.RenderAction("Category", "Category");}
                            </ul>
                        </div>
                        <!-- End Widget -->
                    </aside>
                </div>
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <div class="main-content-blog">
                        <div class="content-blog-list">
                            @foreach (var item in Model)
                            {
                                <article class="item-blog-list">
                                    <div class="banner-adv fade-out-in zoom-image">
                                        <a href="/chi-tiet-blog/@item.BlogID" class="adv-thumb-link"><img height="416px" src="~/Content/Client/images/@item.Image" alt="" /></a>    
                                    </div>
                                    <div class="blog-info border bg-white">
                                        <h2 class="title30 font-bold"><a href="/chi-tiet-blog/@item.BlogID" class="black">@item.TitleBlog</a></h2>
                                        <ul class="list-inline-block blog-comment-date">
                                            <li><label>Category: </label><a href="#" class="color"></a></li>
                                            <li><label>Date: </label><span class="color">@item.CreateDate</span></li>
                                            <li><label>Comment: </label><a href="#" class="color">8</a></li>
                                        </ul>
                                        <p class="desc">@item.TomTat</p>
                                        <div class="table social-readmore">
                                            <div class="text-left">
                                                <a href="/chi-tiet-blog/@item.BlogID" class="shop-button">Read More</a>
                                            </div>
                                        </div>
                                    </div>
                                </article>
                            }
                        </div>
                        <div id="pagination"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Content Shop -->
    </div>
</section>
@section jsBlog{
    <script src="~/Content/Admin/js/mustache.min.js"></script>
    <script src="~/Content/Admin/js/jquery.twbsPagination.min.js"></script>
    <script src="~/Content/Admin/js/Blog.js"></script>
}

<!-- End Content -->

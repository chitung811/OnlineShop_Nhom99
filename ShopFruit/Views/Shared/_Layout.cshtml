    <link href="~/Content/Client/css/libs/jquery.fancybox.css" rel="stylesheet" />
    <link href="~/Content/Client/css/libs/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/Client/css/libs/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/Client/css/libs/owl.transitions.css" rel="stylesheet" />
